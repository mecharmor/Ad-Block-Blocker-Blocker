{
  "manifest_version": 2,

  "name": "Ad Block Blocker Blocker",
  "description": "This extension blocks the ad block blocker",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
	

    "background":	{
		"scripts":	["background.js"]
	},

  "permissions": [
	   "activeTab",
	   "tabs",
	   "http://*/*",
	   "https://*/*"
   ]
}
