{
  "manifest_version": 2,

  "name": "Ad Block Blocker Blocker",
  "description": "This extension blocks the ad block blocker",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

    "content_scripts": [{
		"run_at":	"document_end",
		"js":	["content.js"],
		"matches":	["https://*/*","http://*/*"]
	}],

  "permissions": [
	   "activeTab",
	   "tabs",
	   "http://*/*",
	   "https://*/*"
   ]
}
